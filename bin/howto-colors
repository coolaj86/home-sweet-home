#!/bin/sh
set -e
set -u

# Function to print text with a given ANSI code and show the escape sequence
print_ansi() {
    b_code="${1}"
    b_description="${2}"
    printf "%3s %-15s \\033[%sm\\033[%-10sm\\033[0m \033[%sm%s\033[0m\n" \
        "${b_code}" "${b_description}" "${b_code}" "${b_code}" "${b_code}" "${b_description}"
}

# Foreground colors
printf "\nForeground Colors:\n"
print_ansi "30" "fg Black"
print_ansi "31" "fg Red"
print_ansi "32" "fg Green"
print_ansi "33" "fg Yellow"
print_ansi "34" "fg Blue"
print_ansi "35" "fg Magenta"
print_ansi "36" "fg Cyan"
print_ansi "37" "fg Hi-Gray"
print_ansi "90" "fg Gray"
print_ansi "91" "fg Hi-Red"
print_ansi "92" "fg Hi-Green"
print_ansi "93" "fg Hi-Yellow"
print_ansi "94" "fg Hi-Blue"
print_ansi "95" "fg Hi-Magenta"
print_ansi "96" "fg Hi-Cyan"
print_ansi "97" "fg White"

# Background colors
printf "\nBackground Colors:\n"
print_ansi "40" "bg Black"
print_ansi "41" "bg Red"
print_ansi "42" "bg Green"
print_ansi "43" "bg Yellow"
print_ansi "44" "bg Blue"
print_ansi "45" "bg Magenta"
print_ansi "46" "bg Cyan"
print_ansi "47" "bg Hi-Gray"
print_ansi "100" "bg Gray"
print_ansi "101" "bg Hi-Red"
print_ansi "102" "bg Hi-Green"
print_ansi "103" "bg Hi-Yellow"
print_ansi "104" "bg Hi-Blue"
print_ansi "105" "bg Hi-Magenta"
print_ansi "106" "bg Hi-Cyan"
print_ansi "107" "bg White"

# Text styles
printf "\nText Styles:\n"
print_ansi "0" "Reset/Normal"
print_ansi "1" "Bold"
print_ansi "2" "Faint"
print_ansi "3" "Italics"
print_ansi "4" "Underlined"
print_ansi "5" "Blink"
print_ansi "7" "Reverse"
